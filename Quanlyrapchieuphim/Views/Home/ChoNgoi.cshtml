<style>
    /* Định dạng vùng chứa ghế */
    .seat-map {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    /* Định dạng ghế */
    .custom-radio {
        position: relative;
        display: inline-block;
        cursor: pointer;
        font-size: 16px;
        user-select: none;
        padding: 10px;
    }

        /* Ẩn radio mặc định */
        .custom-radio input[type="radio"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

    /* Định dạng nút chọn ghế */
    .checkmark {
        display: inline-block;
        width: 30px;
        height: 30px;
        background-color: #ddd;
        border-radius: 5px;
        border: 2px solid #999;
        text-align: center;
        line-height: 30px;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

    /* Khi chọn ghế */
    .custom-radio input[type="radio"]:checked + .checkmark {
        background-color: green;
        border-color: darkgreen;
        color: white;
    }

    /* Trạng thái ghế đã hết */
    .custom-radio input[type="radio"]:disabled + .checkmark {
        background-color: red;
        border-color: darkred;
        color: white;
        opacity: 0.7;
    }

    /* Hiệu ứng khi di chuột vào ghế có thể chọn */
    .custom-radio input[type="radio"]:not(:disabled) + .checkmark:hover {
        background-color: lightgreen;
        border-color: green;
    }

    /* Chữ "Màn hình" */
    .centered-h5 {
        margin-top: 20px;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
    }

    /* Thanh ngang */
    .separator-line {
        width: 80%;
        height: 2px;
        background-color: black;
        margin: 10px auto;
    }

    /* Nút chọn ghế */
    .btn-chose {
        display: block;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        margin: 20px auto;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-chose:hover {
            background-color: #0056b3;
        }

</style>

